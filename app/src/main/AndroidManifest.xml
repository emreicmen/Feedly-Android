<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bitirmeprojesi">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BitirmeProjesi"
        android:usesCleartextTraffic="true"
        android:windowSoftInputMode="">
        <activity android:name=".view.posts.CreateCommentActivity"></activity>
        <activity android:name=".view.posts.PostDetails" />
        <activity android:name=".view.CreatePostActivity" />
        <activity android:name=".view.WelcomeActivity" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".view.posts.PostsActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".view.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>